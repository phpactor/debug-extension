{
    "name": "phpactor/debug-extension",
    "description": "Add some debugging facilities",
    "license": "MIT",
    "type": "phpactor-extension",
    "authors": [
        {
            "name": "Daniel Leech",
            "email": "daniel@dantleech.com"
        }
    ],

    "require": {
        "phpactor/container": "^1.0",
        "symfony/var-dumper": "^5.0",
        "symfony/debug": "^4.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.25",
        "phpunit/phpunit": "^9.1",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "autoload": {
        "psr-4": {
            "Phpactor\\Extension\\Debug\\": "lib/"
        },
        "files": [ "lib/bootstrap.php" ]
    },
    "autoload-dev": {
        "psr-4": {
            "Phpactor\\Extension\\Debug\\Tests\\": "tests/"
        }
    },
    "extra": {
        "phpactor.extension_class": "Phpactor\\Extension\\Debug\\DebugExtension",
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    },
    "scripts": {
        "integrate": [
            "./vendor/bin/phpunit",
            "./vendor/bin/phpstan analyze",
            "./vendor/bin/php-cs-fixer fix"
        ]
    }
}
